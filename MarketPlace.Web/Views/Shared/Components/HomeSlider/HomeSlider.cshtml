@using MarketPlace.Application.EntitiesExtensions
@model List<MarketPlace.DataLayer.Entities.Site.Slider>
@if (Model != null && Model.Any())
{
    <section class="slider_section mb-70">
        @foreach (var slide in Model)
        {
            <div class="slider_area owl-carousel">
                <div class="single_slider d-flex align-items-center" data-bgimg="@slide.GetSliderImageAddress()">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="slider_content">
                                    <h1>@slide.MainHeader</h1>
                                    <h2>@slide.SecondHeader</h2>
                                    <p>@slide.Description</p>
                                    <a class="button" href="@slide.Link" target="_blank">اکنون بخرید</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
}