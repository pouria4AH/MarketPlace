@using MarketPlace.Application.Extensions
@using MarketPlace.DataLayer.DTOs.Seller
@using MarketPlace.DataLayer.Entities.Store
@model MarketPlace.DataLayer.DTOs.Seller.FilterSellerDTO
@{
    ViewData["Title"] = "در خواست های فروشندگی";
}
<div class="col-xs-4">
    <div class="well with-header with-footer">
        <div class="header bordered-sky">
            فیلتر
        </div>
        <form method="get" asp-area="Admin" asp-controller="Seller" asp-action="SellerRequests" id="filter-form">
            <input type="hidden" asp-for="PageId" />
            <div class="form-group">
                <label>نام فروشگاه</label>
                <input class="form-control" asp-for="StoreName">
            </div>
            <div class="form-group">
                <label>ادرس </label>
                <input class="form-control" asp-for="Address">
            </div>
            <div class="form-group">
                <label>شماره </label>
                <input class="form-control" asp-for="Phone">
            </div>
            <div class="form-group">
                <label>شماره همراه </label>
                <input class="form-control" asp-for="Mobile">
            </div>
            <br />
            <h3> وضعیت</h3>
            <div class="control-group">
                @foreach (var item in Html.GetEnumSelectList<FilterSellerState>())
                {
                    <div class="radio">
                        <label>
                            <input type="radio" class="colored-blue" value="@item.Value" name="@nameof(Model.State)" @(Convert.ToInt32(item.Value) == Convert.ToInt32(Model.State) ? "checked" : "")>
                            <span class="text"> @item.Text</span>
                        </label>
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-success btn-block">اعمال</button>
        </form>
    </div>
</div>

<div class="col-xs-8">
    <div class="well with-header with-footer">
        <div class="header bordered-sky">
            @ViewData["Title"]
        </div>
        @if (Model.Sellers != null && Model.Sellers.Any())
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            شناسه
                        </th>
                        <th>
                            اسم
                        </th>
                        <th>
                            تلفن
                        </th>
                        <th>
                            وضعیت
                        </th>
                        <th>
                            عملیات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var seller in Model.Sellers)
                    {

                        <tr id="ajax-url-item-@seller.Id">
                            <td>
                                @seller.Id
                            </td>
                            <td>
                                @seller.StoreName
                            </td>
                            <td>
                                @seller.Phone
                            </td>
                            <td>
                                @seller.SellerAcceptanceState.GetEnumName();
                            </td>
                            <td class="danger">
                                @if (seller.SellerAcceptanceState != SellerAcceptanceState.Accepted)
                                {
                                    <a class="btn btn-success" ajax-url-button="@seller.Id" asp-area="Admin" asp-controller="Seller" asp-action="AcceptSellerRequests" asp-route-requestsId="@seller.Id">تایید اطلاعات</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-danger">
                اطلاعاتی یافت نشد
            </div>
        }

        <div class="footer">
            <partial name="_AdminPagingPartial" model="Model.GetCurrentPaging()" />
        </div>
    </div>
</div>
